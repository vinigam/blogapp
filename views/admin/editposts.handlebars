<h4>Edit Post</h4>

{{#each errors}}
    <div class="alert alert-danger">
        {{text}}
    </div>
{{else}}

{{/each}}
<div class="card">
   
    <div clas="card-body">
        
        <form action="/admin/posts/edit" method="POST">
            <label for="titulo">Title</label>
            <input type="hidden" value="{{posts._id}}" name = "id"> 
            <input type="text" name="title" class="form-control" value="{{posts.title}}" required>
            <label for="description">Slug</label>
            <input type="text" name="slug" class="form-control" value="{{posts.slug}}" required>
            <label for="description">Description</label>
            <input type="text" name="description" class="form-control" value="{{posts.description}}" required>
            <label for="description">Content</label>
            <textarea name="content" class="form-control">{{posts.content}}</textarea>
            <labe for="category">Category</labe>
            <select name="category" class="custom-select">
                {{#each category}}
                <option value="{{_id}}">{{name}}</option>
                {{else}}
                <option value="0">No category added</option>
                {{/each}}
            </select>
            <button class="btn btn-success" type="submit">Edit</button>



        </form>
   
    </div>
</div>